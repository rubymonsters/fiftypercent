<div id="all_event_donut" style="height: 200px; text-align:left;"> </div>
<script>

  Morris.Donut({
    element: 'all_event_donut',
    data: [
      {label: "<%= I18n.t 'show.event.donut.male' %>",
       value: <%= 100 - percent %>},
      {label: "<%= I18n.t 'show.event.donut.female' %>",
       value: <%= percent %>},
    ],
    backgroundColor: 'whitesmoke',
    formatter: function(y) { return y + "%"},
    labelColor: '#4E4E4E',
    colors: [
      '#A1D9D4',
      '#00978b'
    ]
  });

</script>
